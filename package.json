{
  "name": "map-component",
  "version": "1.0.6",
  "main": "index.js",
  "repository": "https://github.com/pandasuite/map-component.git",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --open",
    "build": "webpack --mode production --devtool none && cd build && zip -r -X '../pandasuite-component.zip' *",
    "release": "yarn build && release-it --no-npm.publish"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^5.2.4",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.21.2",
    "file-loader": "^6.2.0",
    "release-it": "^13.6.3",
    "style-loader": "^2.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@geoman-io/leaflet-geoman-free": "^2.10.0",
    "font-awesome": "^4.7.0",
    "leaflet": "^1.7.1",
    "leaflet-geosearch": "^3.3.1",
    "leaflet.locatecontrol": "^0.73.0",
    "lodash": "^4.17.21",
    "pandasuite-bridge": "^4.3.0"
  },
  "release-it": {
    "github": {
      "release": true,
      "assets": [
        "pandasuite-component.zip"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "IE >= 9",
      "Android > 0",
      "iOS > 0"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
